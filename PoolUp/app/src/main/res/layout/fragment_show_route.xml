<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_weight="5">


    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/mapRoute"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="com.google.android.gms.maps.MapFragment"
        android:layout_weight="3"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="The distance to the destination is:"
               />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/show_route_distance"/>



            </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The duration of the trip:"
            />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/show_route_duration"/>



    </LinearLayout>

    <Button
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:background="@android:color/holo_green_dark"
        android:layout_height="wrap_content"
        android:onClick="joinPool()"
        android:id="@+id/join_route_btn"
        android:textColor="@android:color/white"
        android:text="Join route"

        />

</LinearLayout>
